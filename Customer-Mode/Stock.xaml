<UserControl x:Class="Customer_Mode.Stock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Customer_Mode"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    
    <StackPanel Margin="5">
        <TextBlock Text="{Binding Product.Name}" TextAlignment="Center" FontSize="20" Margin="0 0 0 5"/>
        <TextBlock Text="{Binding Quantity}" Margin="0 0 0 5"/>
        <Button Name="AddButton" Content="Add" FontSize="16" Width="70" Height="30">
        </Button>
    </StackPanel>
</UserControl>
